<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/padd_10">

        <ImageView
            android:id="@+id/IvPlanet"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_marginRight="@dimen/activity_padding_horizontal"
            android:src="@drawable/bumi"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/TvNamaPlanet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/IvPlanet"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/item_name"
            android:textSize="17dp"
            android:text="Judul"/>

        <TextView
            android:id="@+id/TvPlanetDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvNamaPlanet"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/IvPlanet"
            android:textColor="@color/description"
            android:maxLines="3"
            android:textSize="12dp"
            android:text="Deskripsi"/>

        <TextView
            android:id="@+id/TvUkuranPlanet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/IvPlanet"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="1000"/>

    </RelativeLayout>
</FrameLayout>